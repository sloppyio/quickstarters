{
    "project": "letschat",
    "services": [
        {
            "id": "frontend",
            "apps": [
                {
                    "id": "node",
                    "domain": {
                        "type": "HTTP",
                        "uri": "coolchat.sloppy.zone"
                    },
                    "mem": 1024,
                    "image": "sdelements/lets-chat",
                    "instances": 1,
                    "port_mappings": [
                        {
                            "container_port": 8080
                        }
                    ],
                    "env": {
                        "LCB_DATABASE_URI": "mongodb://mongodb.backend.letschat/letschat"
                    },
                    "dependencies": [
                        "../../backend/mongodb"
                    ]
                }
            ]
        },
        {
            "id": "backend",
            "apps": [
                {
                    "id": "mongodb",
                    "mem": 512,
                    "image": "mongo",
                    "cmd": "mongod --smallfiles",
                    "instances": 1,
                    "volumes": [
                        {
                            "container_path": "/data/db",
                            "size": "8GB"
                }
            ]
                    }
            ]
        }
    ]
}
