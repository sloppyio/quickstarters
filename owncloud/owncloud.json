{
  "project": "owncloud",
  "services": [
    {
      "id": "frontend",
      "apps": [
        {
          "id": "apache",
          "domain": {
            "uri": "$URI"
          },
          "instances": 1,
          "mem": 1024,
          "image": "owncloud:10.0.3",
          "port_mappings": [
            {
              "container_port": 80
            }
          ],
          "volumes": [
            {
              "container_path": "/var/www/html",
              "size": "8GB"
            }
          ],
          "dependencies": [
            "../backend/mysql"
          ]
        }
      ]
    },
    {
      "id": "backend",
      "apps": [
        {
          "id": "mysql",
          "instances": 1,
          "mem": 512,
          "image": "mysql:8.0.3",
          "env": {
            "MYSQL_ROOT_PASSWORD": "$DBROOT",
            "MYSQL_USER": "$DBUSER",
            "MYSQL_PASSWORD": "$DBPASS",
            "MYSQL_DATABASE": "owncloud"
          },
          "volumes": [
            {
              "container_path": "/var/lib/mysql",
              "size": "8GB"
            }
          ]
        }
      ]
    }
  ]
}
